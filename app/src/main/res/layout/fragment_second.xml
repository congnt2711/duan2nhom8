<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

    <ImageView
            android:id="@+id/imgics"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_logo_s"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"/>
    <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="Chi Tiết"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgics"
            android:layout_marginTop="80dp"/>
    <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Theo dõi thời tiết chi tiết như nắng, mưa\n sương mù, sấm chớp, nhiệt độ \ntốc độ gió, độ ẩm"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgics"
            android:layout_marginTop="130dp"/>

    <TextView
            android:id="@+id/txtSkipS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bỏ qua"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_2x"
            android:layout_marginLeft="@dimen/size_4_5x"/>
    <TextView
            android:id="@+id/txtTiepS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/size_2x"
            android:layout_marginRight="@dimen/size_4_5x"/>

</RelativeLayout>