<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_main">
    <TextView
            android:id="@+id/txtTitleFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_6_5x"/>
    <TextView
            android:id="@+id/txtIntroFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleFirst"
            android:layout_marginTop="@dimen/size_8x"
            android:text="Nắng mưa là việc của trời!!! \n Biết được hay không là việc của tôi!!!"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#EFEFEF"
            android:textSize="28sp"/>
    <ImageView
            android:layout_width="@dimen/size_25x"
            android:layout_height="@dimen/size_25x"
            android:src="@drawable/ic_logo"
            android:layout_centerInParent="true"
            android:alpha="0.6"/>


</RelativeLayout>