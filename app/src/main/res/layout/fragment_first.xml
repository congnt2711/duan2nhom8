<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_main">
    <ImageView
            android:id="@+id/imgicf"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_logo_f"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"/>
    <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="Dự Báo Thời Tiết"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgicf"
            android:layout_marginTop="80dp"/>
    <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Dự đoán chính xác thời tiết thời điểm \nhiện tại và nhiệt dộ"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgicf"
            android:layout_marginTop="130dp"/>
    <TextView
            android:id="@+id/txtSkipF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bỏ qua"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_2x"
            android:layout_marginLeft="@dimen/size_4_5x"/>
    <TextView
            android:id="@+id/txtTiepF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/size_2x"
            android:layout_marginRight="@dimen/size_4_5x"/>


</RelativeLayout>